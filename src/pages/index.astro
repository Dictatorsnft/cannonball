---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import SignupForm from '../components/SignupForm.astro';

const seo = {
  title: 'Factory Prints | Your factory for actuve wears and lifestyle apparel.',
  description: 'As a leading designer, manufacturer and marketer of high-performance active wear and spirit wear for teams, coaches, athletes, Factory Prints is all about being able to customize how you want it.',
}
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Coming Soon</h1>
      <p class="fade-in">Be the first to know when our new site is live!</p>
      <SignupForm />
    </article>
  </Container>
</Layout>

